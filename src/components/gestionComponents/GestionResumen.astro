---
    import KuadroAsistencia from "@/components/statistics/KuadroAsistencia.astro"
    import KuadroTardanzas from "@/components/statistics/KuadroTardanzas.astro"
    import KuadroAusencias from "@/components/statistics/KuadroAusencias.astro"
    import KuadroRetiros from "@/components/statistics/KuadroRetiros.astro"
    import KuadroAlertas from "@/components/statistics/KuadroAlertas.astro"

    import { DemoTable } from "@/components/ui/demo-table.jsx";
---

<main>
    <div class="rounded-4xl p-8 w-full h-full">
        <h1 class="text-4xl font-bold mb-4">Resumen de las estadísticas del día de hoy</h1>
        <div class="w-full h-0.5 bg-gray-300"></div>

        <div class="flex flex-col md:flex-row gap-8">
            <div class="grid grid-cols-1 grid-rows-5 md:grid-rows-1 md:grid-cols-5 gap-6 mt-6 mb-10">
                <!-- <KuadroAsistencia title="Asistencias" amount={667} numberOfStudentsAtITESA={700} /> -->
                <KuadroTardanzas title="Tardanzas" amount={45} />
                <KuadroAusencias title="Ausencias" amount={23} />
                <KuadroRetiros title="Retiros" amount={2} />
                <KuadroAlertas title="Alertas verde" amount={6} />
            </div>
        </div>

        <div>
            <DemoTable client:load />
        </div>
    </div>
</main>